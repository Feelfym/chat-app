<div class="main-header">
  <div class="room__name"><%= @room.name %></div>
  <div class="exit__chat__btn"><a href="#">チャットを終了する</a></div>
</div>
<div class="main-content">
  <%= render partial: 'message', collection: @messages%>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f| %>
<div class="form-block">
  <div class="form__input">
    <%= f.text_field :content, class: 'message__form', placeholder: 'type a message' %>
    <label class="form__image">
      <span class="image-file">画像</span>
      <input type="file" class="hidden">
    </label>
  </div>
  <%= f.submit '送信', class: 'send__btn' %>
</div>
<% end %>
